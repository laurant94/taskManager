<div class="container">
  <div class="vertical-center">
    <div class="row">
      <div class="col-md-8 offset-2">
        <div class="card">
          <div class="card-body">

            <% if flash[:success] %>
              <div class="alert alert-success">
                <%= flash[:success] %>
              </div>
            <%end%>

            <% if flash[:danger] %>
              <div class="alert alert-danger">
                <%= flash[:danger] %>
              </div>
            <%end%>

            <%= form_for :user, url: login_path, html: { multipart: true }  do |f| %>
              <p class="text-center h4"> Se connecter </p>
              <div class="mb-3">
                <%= f.text_field :username, class: "form-control", placeholder: "Nom d'utilisateur" %>
              </div>
              <div class="mb-3">
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <div class="d-grid gap-2 text-center">
                <%= f.submit 'Connexion', class:"btn btn-primary", disable_with: 'Connecting...' %>
                <a href="#">Mot de passe oubliÃ©</a> 
                <a href=" <%=register_path%> ">S'inscrire</a>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
  
</div>