<%= form_for user, html: { multipart: true } do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert-danger">
      <h2 class="h4" ><%= pluralize(task.errors.count, t('view.error') ) %> au cours de l'engeristrement de la tÃ¢che</h2>
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <%= f.label :username, class: 'col-sm-2 col-form-label text-start' %>
    <div class="col-sm-10">
      <%= f.text_field :username, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :email, class: 'col-sm-2 col-form-label text-start' %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :password, class: 'col-sm-2 col-form-label text-start' %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :password_confirmation, class: 'col-sm-2 col-form-label text-start' %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :firstname, class: 'col-sm-2 col-form-label text-start' %>
    <div class="col-sm-10">
      <%= f.text_field :firstname, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :lastname, class: 'col-sm-2 col-form-label text-start' %>
    <div class="col-sm-10">
      <%= f.text_field :lastname, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :role, class: 'col-sm-2 col-form-label text-start' %>
    <div class="col-sm-10">
      <%= f.select :role, options_for_select([[], ['Admin', 'admin'], ['Client', 'client']], current_user.role) ,class: 'form-control' %>
    </div>
  </div>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= f.submit 'Creer un utilisateur', class: 'btn btn-primary' %>
  </div>
<% end %>